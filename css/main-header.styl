.main-header
  font-size: 10px
  line-height: 20px

  &:hover
    z-index: 1

  .on-home-page &
    position: absolute
    width: 100%
    z-index: 1

  .on-secondary-page &
    position: absolute
    width: 100%
    z-index: 1

  a
    text-decoration: none

    &.main-logo
      color: white
      font-size: 2.7em

  .on-project-page &
    opacity: 0.4
    position: relative
    transition: opacity 0.5s

    &:hover
      opacity: 1

  .login-bar
    font-size: 1.4em

  .account-bar
    font-size: 1.4em
    position: relative
    top: .75em

    .account-info
      padding-bottom: 1.25em

      .avatar
        height: calc(1em + 1.5vw)
        margin: -4em 0 -3.7em -0.3em
        vertical-align: middle
        width: calc(1em + 1.5vw)

      .display-name
        color: white
        margin-right: 1.4em

      .message-link
        margin-left: 1.4em

      a
        color: white

    .account-menu
      background: FOREGROUND
      border-radius: 4px
      opacity: 0
      display: flex
      transition: opacity 0.25s ease-out
      flex-direction: column
      font-size: 14px
      padding: 1.5em
      pointer-events: none
      position: absolute
      right: 2em
      white-space: no-wrap

      &:before
        border: solid
        border-color: FOREGROUND transparent
        border-width: 0 0.6em 0.6em 0.6em
        top: -0.55em
        content: ""
        display: block
        left: 70%
        position: absolute

      a
        color: white

      .sign-out-button
        text-align: left

    &:hover
      .account-menu
        opacity: 1
        pointer-events: auto
    
    .account-menu[aria-hidden=false]
      opacity: 1
      pointer-events: auto

.main-title
  align-items: center
  background: #0072ff
  box-sizing: border-box
  color: BACKGROUND
  display: flex
  flex-wrap: wrap
  justify-content: space-between
  padding: 1em 3vw

  .on-home-page &
    border-bottom: none
    transition: background 1s ease

    .main-logo
      color: #0072ff

    .main-nav-item:hover
      background: rgba(0,0,0,0.2)

  .on-project-page &, .on-home-page &, .on-secondary-page &, .on-landing-page &
    background: transparent

  &.header-sticky
    background: rgba(0,0,0,0.7)
    position: fixed
    width: 100%
    z-index: 1

    .main-nav-item:hover
      background: rgba(0,0,0,0.8)

  .main-logo
    font-family: "Montserrat"
    font-size: 2.7em
    font-smoothing: antialiased
    letter-spacing: 0.05em
    text-transform: uppercase

  svg
    vertical-align: -0.30em

.main-nav
  display: flex
  flex: 1 0 auto
  flex-wrap: wrap
  padding: 0 1.5em

  > hr
    border: 0
    flex: 1 1 auto
    margin: 0

.main-nav-item
  color: rgba(255,255,255,0.5)
  font-size: 1.4em
  padding: 7.5px 2vw
  margin: 2.5px 0 0

  &:link:hover
    background: rgba(255,255,255, 0.2)
    color: rgba(255,255,255,1)

  &.active
    color: white
    border-bottom: solid 2px white
    font-weight: bold

  .minor
    font-size: 10px
    font-weight: bold
    letter-spacing: 0.1em
    text-transform: uppercase

.on-secondary-page
  .secondary-page
    .hero
      background-size: cover
      box-sizing: border-box
      height: 250px
      padding: 13.5em 3vw 1em

      .hero-container
        margin: 0 auto
        max-width: 960px

        h1
          color: white
          font-size: 3.375em
          font-weight: 400
          line-height: 1.5em
          margin-bottom: 0.75em

        .hero-nav
          a
            @extends .main-nav-item
            text-decoration: none
