.dropdown-form-button
  @extends $reset-button

.dropdown-form-underlay
  background: rgba(gray, 0.2)

.dropdown-form-pointer
  background: white
  box-shadow: 0 0 5px rgba(black 0.3)
  height: 1em
  width: 1em

.dropdown-form
  background: white
  border-radius: 3px
  box-shadow: 0 5px 15px -5px rgba(black, 0.5)
  color: black
  font-size: 14px
  margin: 0.5em 3vw
  padding: 0.5em 1em
